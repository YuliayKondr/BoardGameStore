@model LibraryBoardGameStore.Entites.BoardGame

<div class="well">
    @if (Model.Piccher != null)
    {
        <div class="pull-left" style="margin-right: 10px">
            <img class="img-thumbnail" width="75" height="75"
                 src="@Url.Action("GetImage", "BoardGame",
                new { Model.BoardGameId })" />
        </div>
    }
    <h3>
        <strong>@Model.NameGame</strong>
        <span class="pull-right label label-primary">@Model.Price.ToString("# грн.")</span>
    </h3>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.BoardGameId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Добавить в корзину" />
        </div>
    }
    <span class="lead" style="font-size:12px;">@Model.Description</span>
</div>